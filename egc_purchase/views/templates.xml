<odoo>
    <data>
        <!-- Inherit Form View to Modify it -->
        <record id="origin_visible" model="ir.ui.view">
            <field name="name">origin_visible</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='origin']" position="replace">
                    <!-- Add your fields or attributes here -->
                    <field name="origin"/>
                </xpath>
                <xpath expr="//notebook//field[@name='date_approve']" position="after">
                    <field name="team_id1"></field>
                    <!-- Add your fields or attributes here -->
                </xpath>
                <xpath expr="//field[@name='origin']" position="after">
                    <field name="description"></field>
                </xpath>


            </field>
        </record>

        <!-- Inherit Form View to Modify it  维护送货地址-->
        <record id="delivery_address" model="ir.ui.view">
            <field name="name">delivery_address</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='date_order']" position="after">
                    <field name="dest_address_id" string="送货地址"></field>
                </xpath>

            </field>
        </record>

        <record id="inherit_purchase_order_form" model="ir.ui.view">
            <field name="name">inherit_purchase_order_form</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">

                <xpath expr="//button[@name='button_approve']" position="replace">
                    <button name="button_approve" type="object" states="to approve" string="Boss审核" class="oe_highlight"
                            groups="base.group_erp_manager"/>
                    <button name="button_approve_manage" type="object" states='manage_approve' string="经理审核"
                            class="oe_highlight" groups="purchase.group_purchase_manager"/>
                    <!-- Add new fields here -->
                </xpath>

            </field>
        </record>

        <!-- Inherit Form View to Modify it -->
        <record id="inherit_purchase_view_purchase_order_filter" model="ir.ui.view">
            <field name="name">inherit_purchase_view_purchase_order_filter</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.view_purchase_order_filter"/>
            <field name="arch" type="xml">

                <xpath expr="//filter[@name='to_approve']" position="replace">
                    <!-- Add your fields or attributes here -->
                    <filter name="to_approve" string="Boss审核" domain="[('state', '=', 'to approve')]"/>
                    <filter name="boss_approve" string="经理审核" domain="[('state', '=', 'manage_approve')]"/>
                </xpath>

            </field>
        </record>
        <record id="pruchase_order_tree_sku" model="ir.ui.view">
            <field name="name">pruchase_order_tree_sku</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='order_line']/tree//field[@name='name']" position="after">
                    <field name="sku"></field>
                    <!-- Add new fields here -->
                </xpath>
                <xpath expr="//field[@name='order_line']/form//field[@name='product_qty']" position="before">
                    <field name="sku"></field>
                    <!-- Add new fields here -->
                </xpath>

            </field>
        </record>

        <record id="purchase_order_tree_color" model="ir.ui.view">
            <field name="name">purchase_order_tree_color</field>
            <field name="model">stock.move</field>
            <field name="inherit_id" ref="stock.view_move_tree_receipt_picking"/>
            <field name="arch" type="xml">

                <xpath expr="//tree" position="replace">
                    <tree decoration-muted="state == 'cancel'" default_order="date_expected, picking_id, sequence"
                          string="Moves" decoration-danger="date_expected &lt; current_date"
                          decoration-bf="info_time &gt; date_expected">
                        <field name="info_time" invisible="1"></field>
                        <field name="date_expected" widget="date"/>
                        <field name="date" widget="date"/>
                        <field name="picking_id" string="Reference" invisible="1"/>
                        <field name="sequence" invisible="1"/>
                        <field name="origin"/>
                        <field name="product_id"/>
                        <field name="product_uom_qty"/>
                        <field name="product_uom" options="{'no_open': True, 'no_create': True}"
                               string="Unit of Measure" groups="product.group_uom"/>
                        <field name="location_id" invisible="1"/>
                        <field name="location_dest_id" invisible="1"/>
                        <field name="create_date" invisible="1"/>
                        <field name="state"/>
                    </tree>
                </xpath>

            </field>
        </record>

    </data>
</odoo>